#include <stdio.h>
void main()
{
	float a[100];
			int i,n, sum=0 ;
			printf("enter the no. of elements :");
			fflush(stdin); fflush(stdout);
			scanf("%d",&n);
			for (i=1; i <= n;++i)
			{
				printf("no.%d: ",i);
				fflush(stdin);fflush(stdout);
				scanf("%f",&a[i]);
			}
			for (i=1;i<=n;++i)
			{
				sum = sum + a[i];
			}
		printf("the avrege = %f",(float)sum / n);

}
